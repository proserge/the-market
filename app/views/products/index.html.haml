= if  notice
  %aside{:id => "notice"} notice

%h1 Products
%table
  %tfoot
    %tr
      %td{:colspan => "3"}
        = link_to 'New product', new_product_path
  %tbody
    - @products.each do |product|
      %tr{:class => "#{cycle('list_line_odd', 'list_line_even')}"}
        %td{:class => "image"}
          = image_tag(product.image_url, class: 'list_image')

        %td{:class => "description"}
          %h1= product.title
          %p= truncate(strip_tags(product.description), length: 80)
        %td{:class => "actions"}
          %ul
            %li= link_to 'Show', product
            %li= link_to 'Edit', edit_product_path(product)
            %li= link_to 'Destroy', product, method: :delete, data: {confirm: 'Are you sure?'}
